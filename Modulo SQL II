SELECT PAIS.nombre,COUNT(*) FROM PASAJERO JOIN PAIS WHERE PASAJERO.pais = PAIS.id GROUP BY PAIS.nombre;
SELECT SUM(monto) FROM PAGO;
SELECT ROUND(SUM(monto),2) FROM PAGO JOIN PASAJERO WHERE PAGO.pasajero = PASAJERO.id GROUP BY PASAJERO.id;
